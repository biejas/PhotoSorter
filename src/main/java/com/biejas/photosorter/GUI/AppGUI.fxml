<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.biejas.photosorter.AppGUI">
   <children>
      <Button id="start" layoutX="498.0" layoutY="356.0" mnemonicParsing="false" onAction="#startSorting" text="Start" />
      <Button id="find_category" layoutX="367.0" layoutY="356.0" mnemonicParsing="false" onAction="#findsCategories" text="Find category" />
      <Label layoutX="32.0" layoutY="14.0" text="PhotoSorter">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <TextField id="path" fx:id="folderPath" layoutX="120.0" layoutY="63.0" prefHeight="26.0" prefWidth="350.0" promptText="Path" />
      <TextField id="threshold" fx:id="threshold" layoutX="489.0" layoutY="107.0" prefHeight="26.0" prefWidth="80.0" promptText="In %" />
      <Label layoutX="32.0" layoutY="68.0" text="Folder Path" />
      <Label layoutX="367.0" layoutY="112.0" text="Threshold" />
      <VBox id="categories" fx:id="categories" layoutX="32.0" layoutY="116.0" prefHeight="229.0" prefWidth="268.0" spacing="10.0">
         <children>
            <Label text="Categories" />
         </children>
      </VBox>
      <VBox layoutX="367.0" layoutY="139.0" prefHeight="200.0" prefWidth="207.0" spacing="10.0">
         <children>
            <Label text="Not sorted files" />
            <RadioButton id="others" fx:id="others" mnemonicParsing="false" text="Put into folder Others">
               <toggleGroup>
                  <ToggleGroup fx:id="leftPhotos" />
               </toggleGroup></RadioButton>
            <RadioButton id="in_place" fx:id="inPlace" mnemonicParsing="false" text="Leave in place" toggleGroup="$leftPhotos" />
            <RadioButton id="best_fit" fx:id="bestFit" mnemonicParsing="false" text="Put into best fit" toggleGroup="$leftPhotos" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
      <Button layoutX="489.0" layoutY="63.0" mnemonicParsing="false" onAction="#getDir" text="Find path" />
   </children>
</AnchorPane>
